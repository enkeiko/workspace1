# 42ment ERP v0.1 Environment Variables Template
# Copy this file to .env and fill in your values

# Application
APP_NAME=42ment ERP
APP_VERSION=0.1.0
ENV=development

# Database
DB_PATH=data/42ment.db
DB_BACKUP_PATH=data/backups/

# Logging
LOG_LEVEL=INFO
LOG_PATH=data/logs/

# Export
EXPORT_PATH=data/exports/

# PDF
PDF_FONT_PATH=src/templates/fonts/NanumGothic.ttf

# Authentication (Simple password for single user)
# Generate a hash of your password and paste it here
# Example: Use Python's hashlib to generate
# import hashlib; hashlib.sha256(b'your_password').hexdigest()
PASSWORD_HASH=

# Optional: Backup Schedule
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/news.db

# Admin
ADMIN_SECRET=your-admin-secret-key-change-this

# 네이버 검색 API (https://developers.naver.com/apps/#/register)
# 애플리케이션 등록 후 Client ID와 Secret 입력
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# OpenRouter API (https://openrouter.ai/keys)
# AI 요약 및 기사 선정에 사용됩니다 - 다양한 모델 지원 & 무료 모델 있음!
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxxxxx

# AI 모델 선택 (아래 중 선택)
# 무료: google/gemini-2.0-flash-exp:free, meta-llama/llama-3.2-3b-instruct:free
# 저렴: openai/gpt-4o-mini, anthropic/claude-3-haiku
# 고품질: anthropic/claude-3.5-sonnet, openai/gpt-4o
AI_MODEL=google/gemini-2.0-flash-exp:free

# AI 기반 기사 선정 (선택사항)
# true로 설정하면 AI가 기사 분류 및 품질 평가를 수행합니다
# false면 키워드 기반 필터링 사용 (기본값)
USE_AI_FILTER=false
AI_FILTER_CONFIDENCE_THRESHOLD=70

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Spam Filter
SPAM_WORDS=스팸,광고,홍보,도박,카지노

# Cron Schedule (KST)
CRON_SCHEDULE_1=0 7 * * *
CRON_SCHEDULE_2=0 12 * * *
CRON_SCHEDULE_3=0 18 * * *
CRON_SCHEDULE_4=0 23 * * *


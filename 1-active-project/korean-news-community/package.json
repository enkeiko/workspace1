{
  "name": "korean-news-community",
  "version": "1.0.0",
  "description": "한국 뉴스 자동 수집 + 커뮤니티 시스템",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "powershell -Command \"[Console]::OutputEncoding=[System.Text.Encoding]::UTF8; chcp 65001 | Out-Null; ts-node-dev --respawn src/index.ts\"",
    "collect": "powershell -Command \"[Console]::OutputEncoding=[System.Text.Encoding]::UTF8; chcp 65001 | Out-Null; ts-node src/scripts/collect.ts\"",
    "migrate": "powershell -Command \"[Console]::OutputEncoding=[System.Text.Encoding]::UTF8; chcp 65001 | Out-Null; ts-node src/database/migrate.ts\"",
    "dev:utf8": "powershell -ExecutionPolicy Bypass -File setup-encoding.ps1; npm run dev",
    "collect:utf8": "powershell -ExecutionPolicy Bypass -File setup-encoding.ps1; npm run collect"
  },
  "keywords": ["news", "community", "korean", "automation"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "cheerio": "^1.0.0-rc.12",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "rss-parser": "^3.13.0",
    "uuid": "^9.0.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}

